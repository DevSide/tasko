{
  "name": "tasko",
  "version": "0.0.1",
  "description": "Task sequencer",
  "main": "lib/index.js",
  "module": "es/index.js",
  "repository": "https://github.com/DevSide/tasko",
  "author": "DevSide",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.0",
    "jest": "^22.4.2",
    "jest-in-case": "^1.0.2",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.7.4",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "setimmediate": "^1.0.5"
  },
  "scripts": {
    "build": "run-p build:lib build:es",
    "build:lib": "rimraf lib && BABEL_ENV=commonjs babel src --ignore=__ --out-dir lib",
    "build:es": "rimraf es && BABEL_ENV=es babel src --ignore=__ --out-dir es",
    "check:repository": "test -z \"$(git status --porcelain)\"",
    "ci": "npm-run-all -p format test:coverage build -s check:repository",
    "format": "prettier --config .prettierrc --write 'src/**/*.js' '**/*.md'",
    "test": "BABEL_ENV=test jest",
    "test:coverage": "yarn test --coverage"
  }
}
